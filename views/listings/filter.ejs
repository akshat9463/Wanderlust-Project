<%- layout('/layouts/boilerplate') %>
<h1>Filtered Listings</h1>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
<% if(listing.length === 0) { %>
  <p>No listings found for your search.</p>
<% } else{ %>
  <% for(data of listing) { %>
    <a href="/listing/<%= data._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= data.image.url %>"
          class="card-img-top"
          style="height: 20rem"
          alt="..."
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= data.title %></b> <br />
            &#8377; <%= data.price.toLocaleString("en-IN") %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  <% } %>
</div>