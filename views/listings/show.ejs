<%- layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h1>Listing Details</h1>
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          style="height: 20rem"
          alt="Image_listing"
        />
        <div class="card-body">
          <p class="card-text">
            <b>Owned by : <%= listing.owner.username %></b><br />
            <b>Title: <%= listing.title %></b> <br />
            <b>Price:</b> &#8377;<%= listing.price.toLocaleString("en-IN") %>
            <br />
            <b>Description:</b> <%= listing.description %> <br />
            <b>Location:</b> <%= listing.location %> <br />
            <b>Country:</b> <%= listing.country %> <br />
          </p>
        </div>
      </div>

      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns">
        <form action="/listing/<%= listing._id %>/edit">
          <Button class="btn edit-btn offset-2">Edit</Button>
        </form>
        <form action="/listing/<%= listing._id %>?_method=DELETE" method="post">
          <Button class="btn btn-dark offset-4">Delete</Button>
        </form>
      </div>
      <% } %>
    </div>

    <div class="col-8 offset-2 mb-3">
      <% if(currUser){ %>
      <h4>Leave a review</h4>
      <form
        action="/listing/<%= listing._id %>/review"
        method="post"
        class="needs-validation"
        novalidate
      >
        <!-- <div class="mt-3 mb-3">
          <label for="rating" class="form-lable">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div> -->
        <div class="mt-3 mb-3">
          <label for="rating" class="form-lable">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mt-3 mb-3">
          <label for="comment" class="form-lable">Comment</label>
          <textarea
            name="review[comment]"
            id="comment"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a comment.</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>
      <hr />
      <% if(listing.reviews.length > 0) { %>
      <h4>All Reviews</h4>
      <div class="row">
        <% for(review of listing.reviews) { %>
        <div class="card col-5 ms-2 mb-3 mt-2">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
            <p class="card-text"><%= review.comment %></p>
          </div>
          <form
            action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE"
            method="post"
            class="mb-3"
          >
            <button class="btn btn-dark mt-2">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>

    <!-- <div class="col-8 offset-2 mb-3">
      <h3>Where you will be.</h3>
      <div class="map"></div>
    </div> -->
  </div>
